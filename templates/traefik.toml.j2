logLevel = "INFO"

[traefikLog]
  filePath = "/var/log/traefik.log"
  format   = "json"

[entryPoints]
  [entryPoints.http]
  address = ":80"
    [entryPoints.http.redirect]
    entryPoint = "https"
  [entryPoints.https]
  address = ":443"
    [entryPoints.https.tls]
  [entryPoints.traefik]
  address = ":{{ traefik_http_port }}"
[api]
 dashboard = true
 entryPoint = "traefik"

[acme]
email = "{{ acme_email }}"
storage = "/opt/traefik/acme.json"
onHostRule = true
caServer = "https://acme-staging-v02.api.letsencrypt.org/directory"
#caServer = "https://acme-v02.api.letsencrypt.org/directory"

entryPoint = "https"
 [acme.dnsChallenge]
  provider = "digitalocean"
  delayBeforeCheck = 0

[[acme.domains]]
  main = "*.{{ main_domain }}"

[docker]
endpoint = "unix:///var/run/docker.sock"
domain = "localhost"
watch = true

[file]

[backends]
  [backends.traefik-ui]
     [backends.traefik-ui.servers.server1]
        url = "http://localhost:{{ traefik_http_port }}"
  [backends.gogs]
     [backends.gogs.servers.server1]
        url = "http://localhost:{{ gogs_http_port }}"
  [backends.registry]
     [backends.registry.servers.server1]
        url = "http://localhost:5000"

[frontends]
  [frontends.traefik-ui]
  entryPoints = ["http","https"]
  backend = "traefik-ui"
  basicAuth = ["{{ traefik_basicauth }}"]
  passHostHeader = true
    [frontends.traefik-ui.routes.server1]
    rule = "Host: traefik.{{ main_domain }}"

  [frontends.registry]
  entryPoints = ["http","https"]
  backend = "registry"
  basicAuth = ["{{ traefik_basicauth }}"]
  passHostHeader = true
    [frontends.registry.routes.server1]
    rule = "Host: registry.{{ main_domain }}"

  [frontends.gogs]
  entryPoints = ["http","https"]
  backend = "gogs"
  passHostHeader = true
    [frontends.gogs.routes.server1]
    rule = "Host: git.{{ main_domain }}"
